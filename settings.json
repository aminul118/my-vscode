{
  "explorer.confirmDelete": false,
  "files.autoSave": "afterDelay",
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.codeActionsOnSave": {},
  "workbench.startupEditor": "none",
  "terminal.integrated.fontSize": 16,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.confirmDragAndDrop": false,
  "git.openRepositoryInParentFolders": "never",
  "editor.wordWrap": "on",
  "cSpell.dictionaryDefinitions": [],
  "workbench.settings.applyToAllProfiles": ["editor.fontFamily"],

  //! Editor settings
  "workbench.colorCustomizations": {
    "editor.background": "#1a1a1f", // This Background color is my Favorite
    // "editor.background":"#1a1622",   // Experimental Background color
    "editor.lineHighlightBackground": "#2e323d",
    "editor.selectionBackground": "#3d4352",
    "editorCursor.foreground": "#FF75D8", // Changes cursor color
    "editor.findMatchBorder": "#ff3c01",
    "editor.findMatchBackground": "#831717",

    "terminal.background": "#15151a",
    //  "terminal.foreground":"#882828",
    "terminalCursor.foreground": "#FF75D8", // Terminal Cursor
    "tab.activeForeground": "#1fe0c3",
    "tab.inactiveForeground": "#93989e",
    // "editorGroupHeader.tabsBackground":"#1a1a1f",
    // "tab.hoverBackground":"#010722",
    // "tab.activeBackground":"#000207",

    "menu.background": "#212129", //Menu Background
    "menu.selectionBackground": "#44149e",
    "statusBar.background": "#2249b4",
    // ! Side Bar
    "sideBar.background": "#1a1a27",
    "sideBarTitle.background": "#1a1a27",
    "sideBarSectionHeader.background": "#1a1a27",
    "sideBar.border": "#090a0c",
    "sideBarTitle.foreground": "#ffffff",
    "sideBar.foreground": "#c5c0c0",
    // ! Activity Bar
    "activityBar.activeBorder": "#FF75D8",
    // "activityBar.background":"#23262e",
    // "activityBar.activeBackground": "#670e79"
    // "activityBar.border": "#6276b3",
  },

  //! Comment italic Vs code Default
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  //! Better Comment Extension setting
  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": false,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF75D8",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "#transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "debug.javascript.terminalOptions": {},
  "liveServer.settings.AdvanceCustomBrowserCmdLine": "",
  "liveServer.settings.ChromeDebuggingAttachment": false,
  "editor.fontVariations": false,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "editor.fontSize": 16.6,
  "material-icon-theme.files.associations": {},
  "codesnap.containerPadding": ".1em",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.cursorStyle": "line",
  "json.schemas": [],

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontWeight": "normal",
  "editor.cursorBlinking": "expand",
  "editor.semanticTokenColorCustomizations": {},
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": " Operator Mono Lig, Fira Code, Consolas, 'Courier New', monospace",
  "workbench.colorTheme": "Andromeda Italic" // Operator mono is my favorite font, secondary Fira code
}
