{
  "explorer.confirmDelete": false,
  "files.autoSave": "afterDelay",
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.codeActionsOnSave": {},
  "workbench.startupEditor": "none",
  "terminal.integrated.fontSize": 16,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.confirmDragAndDrop": false,
  "git.openRepositoryInParentFolders": "never",
  "editor.wordWrap": "on",
  "cSpell.dictionaryDefinitions": [],
  "workbench.settings.applyToAllProfiles": ["editor.fontFamily"],

  
  //!  Editor settings
  "workbench.colorCustomizations": {
    "editor.background": "#1a1a1f", // This Background color is my Favorite
    // "editor.background":"#1a1622",   // Experimental Background color
    "editor.lineHighlightBackground": "#2e323d",
    "editor.selectionBackground": "#3d4352",
    "editorCursor.foreground": "#FF75D8", // Changes cursor color
    "editor.findMatchBorder": "#ff3c01",
    "editor.findMatchBackground": "#831717",
    "editor.findMatchForeground": "#ac9e9e",
    "minimap.background": "#1a1a1f00",
   "scrollbarSlider.background": "#3d4352",    
    "scrollbarSlider.activeBackground": "#44149e"     

    //!  Tittle Bar or Top of the VS code
    "titleBar.activeBackground": "#0d29465d",
    "titleBar.activeForeground": "#ebe1e1",
    "menu.background": "#212129", //Menu Background
    "menu.selectionBackground": "#44149e",
    "menu.selectionForeground": "#ffffff",
    //!  Tab
    // "editorGroupHeader.tabsBackground": "#212129",
    "tab.activeBorder": "#83e6d7",
    "tab.activeForeground": "#83e6d7",
    "tab.inactiveForeground": "#b7bbc0",
    // "tab.hoverBackground":"#102270",
    "tab.inactiveBackground": "#2d2d2d00",
    "tab.activeBackground": "#14131300",
    //!  Side Bar
    "sideBar.background": "#1a1a27",
    "sideBarTitle.background": "#1a1a27",
    "sideBarSectionHeader.background": "#1a1a27",
    // "sideBar.border": "#090a0c",
    "sideBarTitle.foreground": "#ffffff",
    "sideBar.foreground": "#c5c0c0",
    "list.activeSelectionBackground": "#04395e",
    "list.activeSelectionForeground": "#31f3b9",
    //!  Activity Bar
    "activityBar.activeBorder": "#FF75D8",
    "activityBar.background": "#0d29465d",
    // "activityBar.activeBackground": "#670e79"
    // "activityBar.border": "#6276b3",
    //!  Terminal Panel
    "terminalCursor.foreground": "#FF75D8", // Terminal Cursor
    "panel.border": "#48494b",
    "panel.background": "#141418",
    "panelTitle.activeForeground": "#83e6d7",
    "panelTitle.activeBorder": "#83e6d7",
    "panelTitle.inactiveForeground": "#b7bbc0",
    //!  Bottom Bar of the VS code
    "statusBar.background": "#0d29465d",
    "statusBar.foreground": "#ebe1e1"
  },

  //!  Comment italic Vs code Default
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  //!  Better Comment Extension setting
  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": false,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF75D8",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "#transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "debug.javascript.terminalOptions": {},
  "liveServer.settings.AdvanceCustomBrowserCmdLine": "",
  "liveServer.settings.ChromeDebuggingAttachment": false,
  "editor.fontVariations": false,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "editor.fontSize": 16.6,
  "material-icon-theme.files.associations": {},
  "codesnap.containerPadding": ".1em",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.cursorStyle": "line",
  "json.schemas": [

  ],

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontWeight": "normal",
  "editor.cursorBlinking": "expand",
  "editor.semanticTokenColorCustomizations": {},
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": " Operator Mono Lig, Fira Code, Consolas, 'Courier New', monospace",
  "workbench.colorTheme": "Andromeda Italic" // Operator mono is my favorite font, secondary Fira code
}
